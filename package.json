{
  "name": "retroarch-asset-server",
  "version": "1.0.0",
  "description": "RetroArch asset server",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib/**"
  ],
  "bin": {
    "retroarch-asset-server": "lib/index.js"
  },
  "scripts": {
    "dev": "nodemon --exec npm start",
    "lint": "standard \"**/*.js\"",
    "pkg": "pkg package.json --compress gzip",
    "start": "node lib/index.js --dat-file \"./MAME 078.dat\" --rom-folder ./roms --verbose",
    "test": "jest --verbose"
  },
  "author": {
    "name": "Nick Heap",
    "email": "nickheap@gmail.com",
    "url": "https://github.com/NickHeap2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickHeap2/retroarch-asset-server.git"
  },
  "keywords": [
    "retroarch",
    "asset",
    "server",
    "mame",
    "roms"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "pkg": "^5.5.1",
    "pkg-fetch": "^3.2.5",
    "nodemon": "^2.0.20",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^8.3.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "jszip": "^3.7.1",
    "xml2js": "^0.4.23"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/*.js",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    }
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "dist/**/*"
    ]
  },
  "pkg": {
    "scripts": "lib/**/*.js",
    "assets": "",
    "targets": [
      "node14-win-x64",
      "node14-linux-x64"
    ],
    "outputPath": "dist"
  }
}
